{
  "clearMocks": true,
  "moduleDirectories": ["node_modules", "src"],
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/file.mock.ts",
    "\\.(css|scss)$": "<rootDir>/src/__mocks__/identity-obj-proxy-esm.ts",
    "\\.svg": "<rootDir>/src/__mocks__/svg.mock.ts",
    "^~(.*)$": "<rootDir>/src/$1"
  },
  "roots": ["<rootDir>/src"],
  "setupFilesAfterEnv": ["./jest.setup.js"],
  "testEnvironment": "jsdom"
}
